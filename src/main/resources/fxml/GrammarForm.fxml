<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox prefHeight="221.0" prefWidth="494.0"
	xmlns="http://javafx.com/javafx"
	xmlns:fx="http://javafx.com/fxml"
	fx:controller="dev.manhnd.english.controllers.GrammarFormController">
	<children>
		<Text strokeType="OUTSIDE" strokeWidth="0.0" text="ID" />
		<TextField fx:id="idFld" />
		<Text strokeType="OUTSIDE" strokeWidth="0.0" text="Bài học">
			<VBox.margin>
				<Insets top="10.0" />
			</VBox.margin>
		</Text>
		<TextField fx:id="lessonFld" />
		<Text strokeType="OUTSIDE" strokeWidth="0.0" text="Đường dẫn">
			<VBox.margin>
				<Insets top="10.0" />
			</VBox.margin>
		</Text>
		<HBox>
			<children>
				<Button mnemonicParsing="false" onAction="#handleFileChooser"
					text="File" />
				<TextField fx:id="pathFld" HBox.hgrow="ALWAYS" />
			</children>
		</HBox>
		<Button fx:id="actionBtn" mnemonicParsing="false"
			onAction="#handleActionBtn" text="Action">
			<VBox.margin>
				<Insets top="10.0" />
			</VBox.margin>
		</Button>
	</children>
	<padding>
		<Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
	</padding>
</VBox>
