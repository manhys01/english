<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<VBox fx:id="parent" prefWidth="500" spacing="5.0"
	xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
	fx:controller="dev.manhnd.english.controllers.SentenceDetailsController">
	<children>
		<TextFlow VBox.vgrow="NEVER">
			<children>
				<Text fx:id="sentenceTxt" fill="#00ab39" strokeType="OUTSIDE"
					strokeWidth="0.0" text="Câu">
					<font>
						<Font size="20.0" />
					</font>
				</Text>
			</children>
			<VBox.margin>
				<Insets />
			</VBox.margin>
		</TextFlow>
		<TextFlow VBox.vgrow="NEVER">
			<children>
				<Text fx:id="ipaTxt" fill="#464646" strokeType="OUTSIDE"
					strokeWidth="0.0" text="Ipa">
					<font>
						<Font name="System Italic" size="13.0" />
					</font>
				</Text>
			</children>
		</TextFlow>
		<TextFlow VBox.vgrow="NEVER">
			<children>
				<Text fx:id="definitionTxt" fill="#0003b2" strokeType="OUTSIDE"
					strokeWidth="0.0" text="Nghĩa">
					<font>
						<Font size="13.0" />
					</font>
				</Text>
			</children>
		</TextFlow>
	</children>
	<padding>
		<Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
	</padding>
</VBox>
